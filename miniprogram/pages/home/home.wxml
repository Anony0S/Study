<!--pages/home/home.wxml-->
<!-- 头部卡片 -->
<view class="bill-box">
  <view class="bill-box-item" bind:tap="toWithdrawinfo">
    <text>昨日收益(元)</text>
    <text class="bill-box-item-money">{{moneyData.last_day_amount.toFixed(2) || '0.00'}}</text>
  </view>
  <view class="bill-box-item" bind:tap="toWithdrawinfo">
    <text>总收益(元)</text>
    <text class="bill-box-item-money">{{moneyData.total_increase_amount.toFixed(2).toString() || '0.00'}}</text>
  </view>
  <view class="cicle cicle1">
  </view>
  <view class="cicle cicle2">
  </view>
  <view class="cicle cicle3">
  </view>
  <view class="cicle cicle4">
  </view>
</view>

<!-- 欢迎公告 -->
<view class="notice-box">
  <t-notice-bar visible="true" prefixIcon="{{false}}" content="欢迎来到联点云！">
    <view slot="prefix-icon">
      <t-icon name="mail" custom-style="color: #ff891f"></t-icon>
    </view>
  </t-notice-bar>
</view>

<!-- 高收益 -->
<view class="high-box">
  <image class="high-box__image" src="../../image/earnings.png" mode="aspectFit" />
</view>

<!-- 邀请好友 -->
<view class="invite-box">
  <button class="invite-box__button" open-type="share">
    <image class="invite-box__image" src="../../image/invite.png" mode="aspectFit" />
  </button>
</view>